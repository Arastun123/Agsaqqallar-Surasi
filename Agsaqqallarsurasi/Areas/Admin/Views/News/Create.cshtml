@model CreateNewsVM
@{
    ViewData["Title"] = "Create";
}

<h1 class="m-3">Yeni xəbər əlavə edin</h1>
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title"> <strong>Başlıq</strong> </label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span class="text text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"> <strong> Əlavə məlumat </strong></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                    <span class="text text-danger" asp-validation-for="Description"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateTime"> <strong>Tarix (gün.ay.il) </strong></label>
                    <input asp-for="DateTime" class="form-control" placeholder="FormattedDateTime">
                    <span class="text text-danger" asp-validation-for="DateTime"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photos"> <strong>Şəkil</strong></label>
                    <p>Ilk seçilən şəkil əsas şəkil olaraq seçilir.</p>
                    <p>Xəbərin şəklini seçmək üçün eyni zamanda 1 neçə şəkil seçin.</p>
                    <input asp-for="Photos" class="form-control" placeholder="Photos" accept="image/*">
                    <span class="text text-danger" asp-validation-for="Photos"></span>
                </div>

               
                 
                <button type="submit" class="btn btn-primary me-2 text-light">Təsdiq et</button>
                <button class="btn btn-light" asp-action="Index">Geriyə</button>

            </form>
        </div>
        </div>
    </div>